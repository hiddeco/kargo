{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "ArgoCDHealthConfig",
  "type": "object",
  "required": ["applications"],
  "additionalProperties": false,
  "properties": {
    "applications": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1,
            "maxLength": 253,
            "pattern": "^[a-z0-9]([-a-z0-9]*[a-z0-9])?(\\.[a-z0-9]([-a-z0-9]*[a-z0-9])?)*$"
          },
          "namespace": {
            "type": "string",
            "minLength": 1,
            "maxLength": 63,
            "pattern": "^[a-z0-9]([-a-z0-9]*[a-z0-9])?$"
          }
        },
        "required": ["name", "namespace"]
      }
    },
    "wait": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "timeout": {
          "type": "string",
          "pattern": "^([0-9]+[hms])+$",
          "default": "1m0s"
        }
      },
      "required": ["enabled"]
    }
  }
}
